{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "运行测试",
            "type": "shell",
            "command": "python",
            "args": ["-m", "pytest", "-v"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "运行当前文件测试",
            "type": "shell",
            "command": "python",
            "args": ["-m", "pytest", "${file}", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
} 