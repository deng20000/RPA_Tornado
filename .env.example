# RPA Tornado 环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# 应用配置
APP_NAME=RPA_Tornado
APP_VERSION=1.0.0
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8888

# 领星API配置
LLX_API_HOST=https://openapi.lingxing.com
LLX_APP_ID=ak_LmR8frklEqfe2
LLX_APP_SECRET=gS/Qn/dLNtD9qKwYaBLkZA==

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/rpa_tornado
REDIS_URL=redis://localhost:6379/0

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# 安全配置
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# API限流配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 监控配置
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENDPOINT=/health

# 外部服务配置
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRY_COUNT=3
EXTERNAL_API_RETRY_DELAY=1

# 文件存储配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10MB
ALLOWED_EXTENSIONS=json,csv,xlsx,txt

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 开发环境配置
DEV_RELOAD=true
DEV_CORS_ENABLED=true
DEV_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000